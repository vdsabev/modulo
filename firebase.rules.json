{
  "rules": {
    ".read": true,
    ".write": false,

    // Posts
    "posts": {
      "$post": {
        "imageUrl": { ".validate": "newData.isString()" },
        "title": { ".validate": "newData.isString()" },
        "subtitle": { ".validate": "newData.isString()" }
      }
    },

    // Post Content
    "postContent": {
      "$post": { ".validate": "newData.isString()" }
    }
  }
}
